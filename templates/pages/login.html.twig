{% extends "layout/base.html.twig" %}

{% block title %}Login - My Application{% endblock %}

{% block content %}
<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <h2 class="card-title text-center mb-4">Login</h2>

                {# login_error is now handled by the global session message display in base.html.twig #}
                {# So, no need for a specific {{ login_error }} display here unless it's different #}
                {# from session.login_error #}

                <form action="{{ form_action_path }}" method="POST">
                    <input type="hidden" name="csrf_token" value="{{ csrf_token }}">

                    <div class="mb-3">
                        <label for="username" class="form-label">Username:</label>
                        <input type="text" id="username" name="username" class="form-control" required autofocus value="{{ username_value | default('') }}">
                    </div>

                    <div class="mb-3">
                        <label for="password" class="form-label">Password:</label>
                        <input type="password" id="password" name="password" class="form-control" required>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Login</button>
                    </div>
                </form>
            </div>
            <div class="card-footer text-center">
                <p class="mb-0">Don't have an account? <a href="{{ register_path | default('#') }}">Sign Up</a></p>
                 <p class="mt-2 mb-0">Forgot password? <a href="{{ forgot_password_path | default('#') }}">Reset here</a></p>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block scripts %}
    {# Add any page-specific scripts here if needed #}
{% endblock %}
